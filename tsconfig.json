{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "target": "es2015",
    "strict": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*"]
}
